{{> header }}
<div class="container">
  <div class="row">
    <div class="col-md-3 nav-area">
      <div class="friends-list"><h3>Friends</h3>
      {{> friends}}
      
      </div>
      
      <form class="search-form d-flex p-2">
            <div class="d-flex justify-content-center">
              <input type="text" id="search" placeholder="Search" />
            </div>
            <button class="d-flex justify-content-center" type="submit">&gt;</button>
            </form>


    </div>
    <div class="col-md-9 post-area">
<form class="new-post-form">
    <div>
      <label for="post">New Squawk</label>
      <input type="text" id="post-content" name="post-content" />
    </div>
    <button type="submit" class="btn">sQuaWk!</button>
    </form>
<ol class="post-list">
  {{#each posts as |post|}}
  <li>
    {{> post-info post }}
  </li>
  {{/each}}
</ol>


    </div>
  </div>
</div>

{{> footer }}
<script src="/javascript/add-post.js"></script>
